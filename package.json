{
  "name": "codesync",
  "displayName": "CodeSync",
  "description": "Stream all code changes to the cloud, in real-time. Never lose code again - no commits needed.",
  "icon": "images/icon.png",
  "version": "2.6.0",
  "publisher": "codesync",
  "engines": {
    "vscode": "^1.32.0",
    "npm": "7.7.6",
    "node": "15.14.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codesync",
          "title": "CodeSync",
          "icon": "images/icon.png"
        }
      ]
    },
    "views": {
      "codesync": [
        {
          "id": "codesync-signup",
          "name": "CodeSync",
          "when": "showLogIn"
        },
        {
          "id": "codesync-signed-up-not-synced",
          "name": "CodeSync",
          "when": "!showLogIn && showConnectRepoView"
        },
        {
          "id": "codesync-signed-up-and-synced",
          "name": "CodeSync",
          "when": "!showLogIn && !showConnectRepoView"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "codesync-signup",
        "contents": "Login to CodeSync.\n[Join](command:codesync.singup)\nTo learn more about how to use CodeSync in VS Code [read our docs](https://codesync.com/install)."
      },
      {
        "view": "codesync-signed-up-not-synced",
        "contents": "You are conneced with CodeSync.\nConnect your repo.\n[Connect](command:codesync.sync)\n"
      },
      {
        "view": "codesync-signed-up-and-synced",
        "contents": "Current repo is in sync with CodeSync.\n[Unsync](command:codesync.unsync)\n"
      }
    ]
  },
  "main": "./out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/current-git-branch": "^1.1.1",
    "@types/dateformat": "^3.0.1",
    "@types/diff-match-patch": "^1.0.32",
    "@types/js-yaml": "^3.12.5",
    "@types/node": "^12.12.0",
    "@types/node-fetch": "^2.5.10",
    "@types/vscode": "^1.32.0",
    "@types/websocket": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@types/detect-port": "^1.3.0",
    "@types/express": "^4.17.12",
    "@types/lodash": "^4.14.170",
    "@types/run-parallel": "^1.1.0",
    "@types/walk": "^2.3.0",
    "aws-sdk": "^2.922.0",
    "current-git-branch": "^1.1.0",
    "dateformat": "^4.4.1",
    "detect-port": "^1.3.0",
    "diff-match-patch": "^1.0.5",
    "express": "^4.17.1",
    "form-data": "^4.0.0",
    "ignore": "^5.1.8",
    "isbinaryfile": "^4.0.8",
    "js-yaml": "^3.14.1",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.1",
    "run-parallel": "^1.2.0",
    "untildify": "^4.0.0",
    "walk": "^2.3.14",
    "websocket": "^1.0.34"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codesyncapp/codesync-vs"
  },
  "homepage": "https://www.codesync.com"
}
